<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="tbUserName"  HorizontalAlignment="Left" Height="32" Margin="200,10,0,0" TextWrapping="Wrap" Text="Ваше имя" VerticalAlignment="Top" Width="582"/>
        <Button x:Name="Bconnect" Click="Button_click" Content="Подключиться" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="185" Height="32"/>
        <ListBox x:Name="lbchat" HorizontalAlignment="Left" Height="318" Margin="10,47,0,0" VerticalAlignment="Top" Width="772"/>
        <TextBox x:Name="tbmsg" HorizontalAlignment="Left" Height="39" Margin="10,370,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="772" KeyDown="tbmsg_KeyDown"/>

    </Grid>
</Window>
